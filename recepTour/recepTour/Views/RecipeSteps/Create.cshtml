@model recepTour.Models.RecipeStep

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RecipeStep</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StepNumber" class="control-label"></label>
                <input asp-for="StepNumber"asp-items="ViewBag.StepNum" class="form-control" style="pointer-events: none;" />
                <span asp-validation-for="StepNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeId" class="control-label"></label>
                <input asp-for="RecipeId" class ="form-control" asp-items="ViewBag.RecipeId" style="pointer-events: none;"></input>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add another step" class="btn btn-primary" formaction=@Url.Action("Create") formmethod="post" />
                <input type="submit" value="Continue" class="btn btn-primary" formaction=@Url.Action("Continue") formmethod="post" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
